@model PagedResult<Book>

<div id="meta" data-total="@Model.Total" data-page="@Model.Page" data-pagesize="@Model.PageSize"></div>
<table class="table table-sm align-middle">
  <thead>
    <tr><th>Title</th><th>Author</th><th>Genre</th><th class="text-end">Price</th><th>Published</th><th></th></tr>
  </thead>
  <tbody>
@foreach (var b in Model.Items)
{
  <tr>
    <td>@b.Title</td>
    <td>@b.AuthorName</td>
    <td>@b.GenreName</td>
    <td class="text-end">@b.Price.ToString("0.00")</td>
    <td>@(b.PublishedOn?.ToString("yyyy-MM-dd"))</td>
    <td class="text-end">
      <button class="btn btn-outline-secondary btn-sm" data-edit="@b.Id">Edit</button>
      <button class="btn btn-outline-danger btn-sm" data-delete="@b.Id">Delete</button>
    </td>
  </tr>
}
  </tbody>
</table>
